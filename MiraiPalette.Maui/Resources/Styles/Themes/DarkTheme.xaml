<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="MiraiPalette.Maui.Resources.Styles.Themes.DarkTheme"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Color x:Key="Primary">#39C5bb</Color>
    <Color x:Key="Secondary">#55393939</Color>
    <Color x:Key="PrimaryText">White</Color>
    <Color x:Key="SecondaryText">#E1E1E1</Color>

    <Color x:Key="FlyoutBackground">#16847D</Color>
    <Color x:Key="HoveredBackground">#555F5F5F</Color>
    <Color x:Key="PageBackground">#001111</Color>
    <Color x:Key="ToolbarBackground">#AA111522</Color>

    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="PrimaryTextBrush"
                     Color="{StaticResource PrimaryText}" />
    <SolidColorBrush x:Key="SecondaryTextBrush"
                     Color="{StaticResource SecondaryText}" />
    <SolidColorBrush x:Key="SuccessBrush"
                     Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="ErrorBrush"
                     Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="WarningBrush"
                     Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="InfoBrush"
                     Color="{StaticResource Info}" />
    <SolidColorBrush x:Key="HoveredBackgroundBrush"
                     Color="{StaticResource HoveredBackground}" />
    <SolidColorBrush x:Key="PageBackgroundBrush"
                     Color="{StaticResource PageBackground}" />
    <SolidColorBrush x:Key="ToolbarBackgroundBrush"
                     Color="{StaticResource ToolbarBackground}" />
</ResourceDictionary>