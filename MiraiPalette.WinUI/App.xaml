<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="MiraiPalette.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:local="using:MiraiPalette.WinUI"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:models="using:MiraiPalette.WinUI.ViewModels"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
                <ResourceDictionary Source="/Controls/CopyButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->
            <media:AcrylicBrush
                x:Key="DefaultAcrylicBrush"
                BlurAmount="15"
                TintColor="{ThemeResource SolidBackgroundFillColorTertiary}"
                TintOpacity=".6" />
            <uiconverters:StringFormatConverter x:Key="StringFormatConverter" />
            <uiconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <uiconverters:BoolNegationConverter x:Key="BoolNegationConverter" />
            <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter" />
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <converters:BoolToListViewSelectionModeConverter x:Key="BoolToListViewSelectionModeConverter" />
            <converters:SafeTypeConverter
                x:Key="FolderViewModelSafeConverter"
                SourceType="models:FolderViewModel" />
            <Style
                x:Key="BorderlessTransparentButtonStyle"
                BasedOn="{StaticResource DefaultButtonStyle}"
                TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>
            <Style
                x:Key="ToolButtonStyle"
                BasedOn="{StaticResource BorderlessTransparentButtonStyle}"
                TargetType="Button">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="8" />
            </Style>
            <Style
                x:Key="CriticalButtonStyle"
                BasedOn="{StaticResource DefaultButtonStyle}"
                TargetType="Button">
                <Setter Property="Foreground" Value="{ThemeResource SystemFillColorCriticalBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
