<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="MiraiPalette.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:local="using:MiraiPalette.WinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->
            <uiconverters:StringFormatConverter x:Key="StringFormatConverter" />
            <uiconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <uiconverters:BoolNegationConverter x:Key="BoolNegationConverter"/>
            <converters:PointToVector3Converter x:Key="PointToVector3Converter"/>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <Style x:Key="BorderlessTransparentButtonStyle" TargetType="Button"
                   BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            <Style x:Key="ToolButtonStyle" BasedOn="{StaticResource BorderlessTransparentButtonStyle}" TargetType="Button">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Padding"
                        Value="8" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
