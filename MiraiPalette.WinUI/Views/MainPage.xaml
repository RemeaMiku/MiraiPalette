<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MiraiPalette.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MiraiPalette.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:views="using:MiraiPalette.WinUI.Views"
    xmlns:vm="using:MiraiPalette.WinUI.ViewModels"
    x:Name="_page"
    MinWidth="320"
    Padding="32"
    DataContext="{x:Bind}"
    NavigationCacheMode="Required"
    SizeChanged="OnPageSizeChanged"
    mc:Ignorable="d">
    <interactivity:Interaction.Behaviors>
        <interactivity:EventTriggerBehavior EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand, Mode=OneTime}" />
        </interactivity:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>
    <Page.Resources>
        <Style
            x:Key="TransparentBorderlessTextBox"
            BasedOn="{StaticResource DefaultTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <DataTemplate x:Key="MiraiColorItemTemplate" x:DataType="vm:ColorViewModel">
            <Rectangle Height="28" Fill="{Binding Color, Converter={converters:ColorToBrushConverter}}" />
        </DataTemplate>
        <DataTemplate x:Key="MiraiPaletteItemTemplate" x:DataType="vm:PaletteViewModel">
            <ItemContainer IsSelected="{x:Bind IsSelected, Mode=TwoWay}">
                <Button
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Command="{Binding DataContext.ViewModel.TogglePaletteSelectionCommand, ElementName=_page, Mode=OneWay}"
                    CommandParameter="{x:Bind}">
                    <Grid Padding="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="8,4,8,0"
                            MaxLines="1"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind Title, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="8,4"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            MaxLines="3"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind Description, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                        <GridView
                            Grid.Row="2"
                            Padding="8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            AllowDrop="True"
                            CanDragItems="True"
                            CanReorderItems="True"
                            IsItemClickEnabled="True"
                            ItemTemplate="{StaticResource MiraiColorItemTemplate}"
                            ItemsSource="{x:Bind Colors, Mode=OneTime}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="None">
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="0,-8" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                </Style>
                            </GridView.ItemContainerStyle>
                        </GridView>
                    </Grid>
                </Button>
            </ItemContainer>
        </DataTemplate>
        <Flyout x:Key="MiraiColorEditColorFlyout">
            <StackPanel Orientation="Vertical">
                <controls:ColorPicker
                    ColorChanged="ColorPicker_ColorChanged"
                    IsAlphaEnabled="False"
                    Color="{x:Bind ViewModel.PreviewColor, Mode=TwoWay}" />
                <StackPanel
                    Margin="8"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Button
                        Padding="48,4"
                        HorizontalAlignment="Left"
                        Click="OnSaveColorButton_Click"
                        Command="{x:Bind ViewModel.SaveColorCommand, Mode=OneTime}"
                        CommandParameter="{Binding}"
                        Content="{ui:SymbolIcon Symbol=Accept}"
                        Style="{ThemeResource AccentButtonStyle}" />
                    <Button
                        Padding="48,4"
                        HorizontalAlignment="Right"
                        Command="{x:Bind ViewModel.ResetPreviewColorCommand, Mode=OneTime}"
                        CommandParameter="{Binding}"
                        Content="{ui:SymbolIcon Symbol=Undo}" />
                </StackPanel>
            </StackPanel>
        </Flyout>
        <MenuFlyout x:Name="MiraiColorMoreFlyout">
            <MenuFlyoutItem Icon="{ui:SymbolIcon Symbol=Go}" Text="将颜色移动到…" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.DeleteSelectedColorsCommand,Mode=OneTime}"
                Foreground="{StaticResource SystemFillColorCriticalBrush}"
                Icon="{ui:SymbolIcon Symbol=Delete}"
                Text="删除颜色" />
        </MenuFlyout>
        <DataTemplate x:Key="MiraiColorItemDetailTamplate" x:DataType="vm:ColorViewModel">
            <ItemContainer
                x:Name="MiraiColorItemDetailItemContainer"
                Width="240"
                Height="160"
                IsSelected="{x:Bind IsSelected, Mode=TwoWay}">
                <Grid>
                    <Button
                        Height="96"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Background="{Binding Color, Converter={converters:ColorToBrushConverter}, Mode=OneWay}"
                        Command="{Binding ViewModel.EditColorCommand, ElementName=_page, Mode=OneTime}"
                        CommandParameter="{x:Bind}"
                        Flyout="{StaticResource MiraiColorEditColorFlyout}"
                        Style="{StaticResource DateTimePickerFlyoutButtonStyle}">
                        <interactivity:Interaction.Behaviors>
                            <interactivity:EventTriggerBehavior EventName="RightTapped">
                                <interactivity:InvokeCommandAction Command="{Binding ViewModel.SelectColorCommand, ElementName=_page, Mode=OneTime}" CommandParameter="{x:Bind}" />
                            </interactivity:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </Button>
                    <Border
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBox
                                Padding="4"
                                FontSize="{StaticResource SubtitleTextBlockFontSize}"
                                PlaceholderText="[未命名颜色]"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                            <Button
                                x:Name="CopyColorButton"
                                Padding="4"
                                HorizontalAlignment="Stretch"
                                Click="OnCopyColorButton_Click"
                                Command="{Binding ViewModel.CopyColorToClipboardCommand, ElementName=_page, Mode=OneTime}"
                                CommandParameter="{x:Bind Hex, Mode=OneWay}">
                                <Grid x:Name="CopyButtonContentGrid">
                                    <StackPanel
                                        x:Name="CopyNormalContent"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                        <SymbolIcon Symbol="Copy" />
                                        <TextBlock Text="{x:Bind Hex, Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="CopyCopiedContent"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        Visibility="Collapsed">
                                        <FontIcon Glyph="&#xE73E;" />
                                        <TextBlock Text="已复制" />
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>
    <SplitView
        x:Name="_mainView"
        DisplayMode="Inline"
        IsPaneOpen="{x:Bind ViewModel.IsPalettePanelOpen, Mode=TwoWay}"
        OpenPaneLength="320"
        PaneBackground="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
        PanePlacement="Right">
        <SplitView.Pane>
            <Grid Padding="8" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    HorizontalAlignment="Right"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.TogglePaletteSelectionCommand, Mode=OneTime}"
                    CommandParameter="{x:Bind ViewModel.CurrentPalette, Mode=OneWay}"
                    Content="{ui:SymbolIcon Symbol=Cancel}" />
                <ScrollViewer x:Name="_colorsScrollViewer" Grid.Row="1">
                    <StackPanel>
                        <Border Height="128" />
                        <GridView
                            x:Name="_colorsView"
                            Padding="4"
                            HorizontalAlignment="Center"
                            AllowDrop="True"
                            CanDragItems="True"
                            CanReorderItems="True"
                            ContextFlyout="{StaticResource MiraiColorMoreFlyout}"
                            IsItemClickEnabled="True"
                            ItemTemplate="{StaticResource MiraiColorItemDetailTamplate}"
                            ItemsSource="{x:Bind ViewModel.CurrentPalette.Colors, Mode=OneWay}"
                            SelectionMode="Single" />
                        <Border Height="48" />
                    </StackPanel>
                </ScrollViewer>
                <Border
                    Grid.Row="1"
                    Margin="16,0"
                    Padding="8"
                    VerticalAlignment="Top"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <StackPanel Orientation="Vertical" Spacing="4">
                        <TextBox
                            FontSize="{StaticResource TitleTextBlockFontSize}"
                            FontWeight="SemiBold"
                            PlaceholderText="标题…"
                            Style="{StaticResource TransparentBorderlessTextBox}"
                            Text="{x:Bind ViewModel.CurrentPalette.Title, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        <TextBox
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            PlaceholderText="描述…"
                            Style="{StaticResource TransparentBorderlessTextBox}"
                            Text="{x:Bind ViewModel.CurrentPalette.Description, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Margin="8"
                    Padding="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    BorderThickness="0"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="4">
                        <Button
                            Padding="4"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OnAddColorButton_Click"
                            Command="{x:Bind ViewModel.AddColorCommand, Mode=OneTime}"
                            Content="{ui:SymbolIcon Symbol=Add}"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <Button
                            Padding="4"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="{ui:SymbolIcon Symbol=More}"
                            Flyout="{StaticResource MiraiColorMoreFlyout}" />
                    </StackPanel>
                </Border>
            </Grid>
        </SplitView.Pane>
        <Grid Padding="0">
            <ScrollViewer x:Name="_palettesScrollViewer" Padding="8">
                <ItemsRepeater ItemTemplate="{StaticResource MiraiPaletteItemTemplate}" ItemsSource="{x:Bind ViewModel.Palettes, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <controls:StaggeredLayout
                            ColumnSpacing="8"
                            DesiredColumnWidth="320"
                            ItemsStretch="Fill"
                            RowSpacing="8" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>
            <Border
                Margin="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarToggleButton
                        BorderThickness="0"
                        Content="{ui:FontIcon Glyph=&#xE762;}"
                        IsChecked="{x:Bind ViewModel.IsMultiSelectMode, Mode=TwoWay}"
                        Label="多选" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SelectAllPalettesCommand, Mode=OneTime}"
                        Icon="SelectAll"
                        Label="全选"
                        Visibility="{x:Bind ViewModel.IsMultiSelectMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.ClearSelectionCommand, Mode=OneTime}"
                        Icon="ClearSelection"
                        IsEnabled="{x:Bind ViewModel.HasSelectedPalettes, Mode=OneWay}"
                        Label="清除"
                        Visibility="{x:Bind ViewModel.IsMultiSelectMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <AppBarSeparator />
                    <AppBarButton
                        Command="{x:Bind ViewModel.AddPaletteCommand, Mode=OneTime}"
                        Icon="Add"
                        Label="新建" />
                    <AppBarButton
                        Click="OnExtractFromImageButtonClick"
                        Icon="{ui:FontIcon Glyph=&#xE91B;}"
                        Label="提取" />
                    <AppBarButton Icon="{ui:SymbolIcon Symbol=OpenFile}" Label="导入" />
                    <AppBarSeparator />
                    <CommandBar.SecondaryCommands>
                        <AppBarButton
                            Command="{x:Bind ViewModel.DeleteSelectedPalettesCommand,Mode=OneTime}"
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Icon="{ui:SymbolIcon Symbol=Delete}"
                            Label="删除"
                            Visibility="{x:Bind ViewModel.HasSelectedPalettes, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </Border>
        </Grid>
    </SplitView>
</Page>
