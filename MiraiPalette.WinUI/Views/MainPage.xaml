<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MiraiPalette.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiraiPalette.WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="using:MiraiPalette.WinUI.ViewModels"
      xmlns:views="using:MiraiPalette.WinUI.Views"
      mc:Ignorable="d">

    <Grid>
        <ItemsRepeaterScrollHost Grid.Row="1">
            <ScrollViewer Padding="5">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Palettes, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:PaletteViewModel">
                            <Button Width="500"
                                    Margin="5"
                                    HorizontalContentAlignment="Left">
                                <Grid>
                                    <TextBlock Text="{x:Bind Title,Mode=OneWay}"
                                               FontSize="20"
                                               Margin="8" />
                                    <GridView Grid.Column="1"
                                              ItemsSource="{x:Bind Colors,Mode=OneWay}"
                                              Margin="8,40,8,8"
                                              IsItemClickEnabled="False"
                                              SelectionMode="None">
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="models:ColorViewModel">
                                                <Rectangle Width="50"
                                                           Height="50"
                                                           Fill="{x:Bind Brush}" />
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <views:MasonryLayout Width="500" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>
        </ItemsRepeaterScrollHost>
    </Grid>
</Page>
