<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MiraiPalette.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:converters2="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MiraiPalette.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:models="using:MiraiPalette.WinUI.ViewModels"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:views="using:MiraiPalette.WinUI.Views"
    x:Name="_page"
    Padding="32"
    DataContext="{x:Bind}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <!--<media:AttachedCardShadow x:Key="CommonShadow"
                                  Offset="4" />-->
        <converters2:BoolToObjectConverter
            x:Key="MiraiPaletteSelectionToBrushConverter"
            FalseValue="Transparent"
            TrueValue="{ThemeResource AccentFillColorTertiaryBrush}" />
        <Style
            x:Key="TransparentBorderlessTextBox"
            BasedOn="{StaticResource DefaultTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <converters2:BoolToObjectConverter
            x:Key="MiraiPaletteSelectionToStyleConverter"
            FalseValue="{StaticResource DefaultButtonStyle}"
            TrueValue="{StaticResource AccentButtonStyle}" />
        <DataTemplate x:Key="MiraiColorItemTemplate" x:DataType="models:ColorViewModel">
            <Rectangle Height="28" Fill="{Binding Color, Converter={converters:ColorToBrushConverter}}" />
        </DataTemplate>
        <DataTemplate x:Key="MiraiPaletteItemTemplate" x:DataType="models:PaletteViewModel">
            <Border
                BorderBrush="{Binding IsSelected, Converter={StaticResource MiraiPaletteSelectionToBrushConverter}}"
                BorderThickness="2"
                CornerRadius="4">
                <Button
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Command="{Binding DataContext.ViewModel.TogglePaletteSelectionCommand, ElementName=_page, Mode=OneWay}"
                    CommandParameter="{Binding}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="8,4,8,0"
                            MaxLines="1"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{Binding Title}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="8,4"
                            Foreground="{StaticResource TextFillColorTertiaryBrush}"
                            MaxLines="3"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{Binding Description}"
                            TextTrimming="CharacterEllipsis" />
                        <GridView
                            Grid.Row="2"
                            Padding="8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            AllowDrop="True"
                            CanDragItems="True"
                            CanReorderItems="True"
                            IsItemClickEnabled="True"
                            ItemTemplate="{StaticResource MiraiColorItemTemplate}"
                            ItemsSource="{Binding Colors}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="None">
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="0,-8" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                </Style>
                            </GridView.ItemContainerStyle>
                        </GridView>
                    </Grid>
                </Button>
            </Border>
        </DataTemplate>
        <Flyout x:Key="MiraiColorEditColorFlyout">
            <StackPanel Orientation="Vertical">
                <ColorPicker IsAlphaEnabled="False" Color="{x:Bind ViewModel.PreviewColor, Mode=TwoWay}" />
                <StackPanel
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Click="OnSaveColorButton_Click"
                        Command="{x:Bind ViewModel.SaveColorCommand, Mode=OneTime}"
                        CommandParameter="{Binding}"
                        Content="确定"
                        Style="{ThemeResource AccentButtonStyle}" />
                    <Button
                        Command="{x:Bind ViewModel.ResetPreviewColorCommand, Mode=OneTime}"
                        CommandParameter="{Binding}"
                        Content="重置" />
                </StackPanel>
            </StackPanel>
        </Flyout>
        <DataTemplate x:Key="MiraiColorItemDetailTamplate" x:DataType="models:ColorViewModel">
            <ItemContainer Width="240" Height="160">
                <Grid>
                    <Border Background="{Binding Color, Converter={converters:ColorToBrushConverter}, Mode=OneWay}" />
                    <Button
                        Margin="4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ViewModel.EditColorCommand, ElementName=_page, Mode=OneTime}"
                        CommandParameter="{x:Bind}"
                        Content="{ui:SymbolIcon Symbol=Edit,
                                                FontSize=16}"
                        Flyout="{StaticResource MiraiColorEditColorFlyout}" />
                    <Border
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBox
                                Padding="4"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                            <Button
                                x:Name="CopyColorButton"
                                Padding="4"
                                HorizontalAlignment="Stretch"
                                Click="OnCopyColorButton_Click"
                                Command="{Binding ViewModel.CopyColorToClipboardCommand, ElementName=_page, Mode=OneTime}"
                                CommandParameter="{x:Bind Hex, Mode=OneWay}">
                                <Button.Background>
                                    <SolidColorBrush x:Name="CopyButtonBackgroundBrush" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                                </Button.Background>
                                <Grid x:Name="CopyButtonContentGrid">
                                    <StackPanel
                                        x:Name="CopyNormalContent"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                        <SymbolIcon Symbol="Copy" />
                                        <TextBlock Text="{x:Bind Hex, Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="CopyCopiedContent"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        Visibility="Collapsed">
                                        <FontIcon Glyph="&#xE73E;" />
                                        <TextBlock Text="已复制" />
                                    </StackPanel>
                                </Grid>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CopyStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="Copied">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CopyButtonBackgroundBrush" Storyboard.TargetProperty="Color">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SuccessFillColorDefaultBrush}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>
    <SplitView
        x:Name="MainView"
        DisplayMode="Inline"
        IsPaneOpen="{x:Bind ViewModel.IsPalettePanelOpen, Mode=TwoWay}"
        OpenPaneLength="320"
        PaneBackground="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
        PanePlacement="Right">
        <SplitView.Pane>
            <Grid Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBox
                        FontSize="{StaticResource TitleTextBlockFontSize}"
                        PlaceholderText="标题…"
                        Style="{StaticResource TransparentBorderlessTextBox}"
                        Text="{x:Bind ViewModel.CurrentPalette.Title, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <TextBox
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        PlaceholderText="描述…"
                        Style="{StaticResource TransparentBorderlessTextBox}"
                        Text="{x:Bind ViewModel.CurrentPalette.Description, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </StackPanel>
                <GridView
                    Grid.Row="1"
                    Padding="8"
                    HorizontalAlignment="Center"
                    AllowDrop="True"
                    CanDragItems="True"
                    CanReorderItems="True"
                    IsItemClickEnabled="True"
                    ItemTemplate="{StaticResource MiraiColorItemDetailTamplate}"
                    ItemsSource="{x:Bind ViewModel.CurrentPalette.Colors, Mode=OneWay}"
                    SelectionMode="Single" />
            </Grid>
        </SplitView.Pane>
        <Grid Padding="16">
            <ScrollViewer Padding="8">
                <ItemsRepeater ItemTemplate="{StaticResource MiraiPaletteItemTemplate}" ItemsSource="{x:Bind ViewModel.Palettes, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <controls:StaggeredLayout
                            ColumnSpacing="8"
                            DesiredColumnWidth="320"
                            ItemsStretch="Fill"
                            RowSpacing="8" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>
            <Border
                Margin="32"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <ToggleButton
                        Background="Transparent"
                        BorderThickness="0"
                        Content="{ui:FontIcon Glyph=&#xE762;}" />
                    <AppBarSeparator />
                    <SplitButton BorderThickness="0" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <SymbolIcon Symbol="Add" />
                            <TextBlock FontSize="16" Text="新建调色板" />
                        </StackPanel>
                        <SplitButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyout.SystemBackdrop>
                                    <DesktopAcrylicBackdrop />
                                </MenuFlyout.SystemBackdrop>
                                <RadioMenuFlyoutItem
                                    FontSize="16"
                                    Icon="Add"
                                    IsChecked="True"
                                    Text="新建调色板" />
                                <RadioMenuFlyoutItem
                                    FontSize="16"
                                    Icon="{ui:FontIcon Glyph=&#xE91B;}"
                                    Text="从图片提取" />
                                <RadioMenuFlyoutItem
                                    FontSize="16"
                                    Icon="OpenFile"
                                    Text="从文件导入" />
                            </MenuFlyout>
                        </SplitButton.Flyout>
                    </SplitButton>
                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Content="{ui:SymbolIcon Symbol=Delete}"
                        Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                </StackPanel>
            </Border>
        </Grid>
    </SplitView>
</Page>
