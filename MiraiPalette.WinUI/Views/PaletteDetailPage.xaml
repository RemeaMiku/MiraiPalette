<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MiraiPalette.WinUI.Views.PaletteDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:MiraiPalette.WinUI.Behaviors"
    xmlns:controls="using:MiraiPalette.WinUI.Controls"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:MiraiPalette.WinUI.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MiraiPalette.WinUI.Views"
    xmlns:localization="using:MiraiPalette.WinUI.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:uicontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:vm="using:MiraiPalette.WinUI.ViewModels"
    x:Name="RootPage"
    NavigationCacheMode="Disabled"
    SizeChanged="OnRootPageSizeChanged"
    mc:Ignorable="d">
    <Page.Resources>
        <Style
            x:Key="TransparentBorderlessTextBox"
            BasedOn="{StaticResource DefaultTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <DataTemplate
            x:Key="MiraiColorItemDetailTamplate"
            x:DataType="vm:ColorViewModel">
            <ItemContainer
                x:Name="MiraiColorItemDetailItemContainer"
                Width="240"
                Height="160"
                IsSelected="{x:Bind IsSelected, Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind x:String.Format(localization:PaletteDetailPageStrings.ColorItem_Tooltip, Name), Mode=OneWay}">
                <Grid>
                    <Rectangle
                        Height="108"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Fill="{x:Bind Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}" />
                    <Border
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                        <StackPanel
                            Orientation="Vertical"
                            Spacing="4">
                            <TextBox
                                Padding="4"
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                FontSize="{StaticResource SubtitleTextBlockFontSize}"
                                FontWeight="Medium"
                                IsEnabled="{Binding ViewModel.IsNotBusy, ElementName=RootPage, Mode=OneWay}"
                                PlaceholderText="{x:Bind localization:PaletteDetailPageStrings.ColorName_Placeholder, Mode=OneTime}"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                ToolTipService.ToolTip="{x:Bind x:String.Format(localization:PaletteDetailPageStrings.ColorName_Tooltip, Name), Mode=OneWay}" />
                            <controls:CopyButton
                                ClickMode="Release"
                                Content="{x:Bind Hex, Mode=OneWay}"
                                CopiedText="{x:Bind localization:Resources.Copied, Mode=OneTime}"
                                ResetDelay="0:0:3"
                                TextToCopy="{x:Bind Hex, Mode=OneWay}"
                                ToolTipService.ToolTip="{x:Bind x:String.Format(localization:PaletteDetailPageStrings.ColorValueButton_Tooltip, Hex), Mode=OneWay}" />
                        </StackPanel>
                    </Border>
                </Grid>
                <ItemContainer.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Command="{Binding ViewModel.EditColorCommand, Mode=OneTime, ElementName=RootPage}"
                            CommandParameter="{x:Bind}"
                            Icon="{ui:SymbolIcon Symbol=Edit}"
                            Text="{x:Bind localization:Resources.Edit, Mode=OneTime}" />
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem
                            Command="{Binding ViewModel.DeleteCurrentOrSelectedColorsCommand, Mode=OneTime, ElementName=RootPage}"
                            CommandParameter="{x:Bind}"
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Icon="{ui:SymbolIcon Symbol=Delete}"
                            Text="{x:Bind localization:Resources.Delete, Mode=OneTime}" />
                    </MenuFlyout>
                </ItemContainer.ContextFlyout>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <SplitView
            x:Name="PaletteView"
            DisplayMode="Inline"
            IsPaneOpen="{x:Bind ViewModel.IsEditingColor, Mode=OneWay}"
            LightDismissOverlayMode="On"
            OpenPaneLength="360"
            PaneBackground="{ThemeResource DefaultAcrylicBrush}"
            PanePlacement="Right">
            <Grid
                Padding="8"
                RowSpacing="4">
                <ScrollViewer
                    x:Name="ColorsScrollViewer"
                    Padding="4">
                    <StackPanel Padding="4">
                        <Border Height="120" />
                        <GridView
                            x:Name="ColorsView"
                            Padding="4"
                            HorizontalAlignment="Center"
                            AllowDrop="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                            CanReorderItems="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                            IsItemClickEnabled="True"
                            ItemTemplate="{StaticResource MiraiColorItemDetailTamplate}"
                            ItemsSource="{x:Bind ViewModel.Palette.Colors, Mode=OneTime}"
                            SelectedItem="{x:Bind ViewModel.SelectedColor, Mode=TwoWay}"
                            SelectionMode="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToListViewSelectionModeConverter}, Mode=OneWay}">
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="SelectionChanged">
                                    <interactivity:InvokeCommandAction
                                        Command="{x:Bind ViewModel.UpdateColorSelectionCommand, Mode=OneTime}"
                                        CommandParameter="{x:Bind ColorsView.SelectedItems, Mode=OneTime}" />
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </GridView>
                    </StackPanel>
                </ScrollViewer>
                <Border
                    x:Name="PaletteHeader"
                    Margin="8"
                    Padding="16,8"
                    VerticalAlignment="Top"
                    Background="{ThemeResource DefaultAcrylicBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <Grid ColumnSpacing="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*"
                                MinWidth="160" />
                            <ColumnDefinition
                                MinWidth="60"
                                MaxWidth="240" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Orientation="Vertical"
                            Spacing="4">
                            <TextBox
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                FontSize="{StaticResource TitleTextBlockFontSize}"
                                FontWeight="SemiBold"
                                IsEnabled="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                                PlaceholderText="{x:Bind localization:PaletteDetailPageStrings.PaletteTitle_Placeholder}"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind ViewModel.Palette.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                TextAlignment="Left"
                                ToolTipService.ToolTip="{x:Bind x:String.Format(localization:PaletteDetailPageStrings.PaletteTitle_Tooltip, ViewModel.Palette.Name), Mode=OneWay}" />
                            <TextBox
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                IsEnabled="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                                PlaceholderText="{x:Bind localization:PaletteDetailPageStrings.PaletteDescription_Placeholder}"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind ViewModel.Palette.Description, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                ToolTipService.ToolTip="{x:Bind x:String.Format(localization:PaletteDetailPageStrings.PaletteDescription_Tooltip, ViewModel.Palette.Description), Mode=OneWay}" />
                        </StackPanel>
                        <uicontrols:WrapPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            HorizontalSpacing="16"
                            VerticalSpacing="4">
                            <Button
                                x:Name="AddColorButton"
                                Command="{x:Bind ViewModel.AddColorCommand, Mode=OneTime}"
                                Content="{ui:SymbolIcon Symbol=Add}"
                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                IsEnabled="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                                ToolTipService.ToolTip="{x:Bind localization:PaletteDetailPageStrings.AddColorButton_Tooltip, Mode=OneTime}"
                                Visibility="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToVisibilityInverseConverter}, Mode=OneWay}" />
                            <ToggleButton
                                x:Name="MultiSelectionToggleButton"
                                Content="{ui:FontIcon Glyph=&#xE762;}"
                                IsChecked="{x:Bind ViewModel.IsMultiSelectionEnabled, Mode=TwoWay}"
                                ToolTipService.ToolTip="{x:Bind localization:PaletteDetailPageStrings.ToggleSelectionModeButton_Tooltip, Mode=OneTime}" />
                            <Button
                                Command="{x:Bind ViewModel.ExportPaletteCommand, Mode=OneTime}"
                                Content="{ui:FontIcon Glyph=&#xE792;}"
                                Foreground="SkyBlue"
                                ToolTipService.ToolTip="{x:Bind localization:PaletteDetailPageStrings.ExportPaletteButton_Tooltip, Mode=OneTime}"
                                Visibility="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToVisibilityInverseConverter}, Mode=OneWay}" />
                            <Button
                                Command="{x:Bind ViewModel.DeleteCurrentOrSelectedColorsCommand, Mode=OneTime}"
                                Content="{ui:SymbolIcon Symbol=Delete}"
                                IsEnabled="{x:Bind ViewModel.HasSelectedColors, Mode=OneWay}"
                                Style="{ThemeResource CriticalButtonStyle}"
                                ToolTipService.ToolTip="{x:Bind localization:Resources.Delete, Mode=OneTime}"
                                Visibility="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                            <Button
                                Content="{ui:SymbolIcon Symbol=More}"
                                ToolTipService.ToolTip="{x:Bind localization:PaletteDetailPageStrings.MoreActionsButton_Tooltip, Mode=OneTime}">
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                            Command="{x:Bind ViewModel.DeletePaletteCommand, Mode=OneTime}"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                            Icon="{ui:SymbolIcon Symbol=Delete}"
                                            Text="{x:Bind localization:PaletteDetailPageStrings.DeletePaletteButton_Text, Mode=OneTime}" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </uicontrols:WrapPanel>
                        <StackPanel
                            Grid.Column="1"
                            Padding="4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="16" />
                    </Grid>
                </Border>
            </Grid>
            <SplitView.Pane>
                <Grid Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                        x:Name="CloseColorEditPanelButton"
                        HorizontalAlignment="Right"
                        Command="{x:Bind ViewModel.ExitColorEditingCommand, Mode=OneTime}"
                        Content="{ui:SymbolIcon Symbol=Cancel}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Padding="8"
                        VerticalAlignment="Center">
                        <Viewbox HorizontalAlignment="Stretch">
                            <uicontrols:ColorPicker
                                ColorChanged="ColorPicker_ColorChanged"
                                ColorSpectrumShape="Ring"
                                IsColorPaletteVisible="False"
                                Color="{x:Bind ViewModel.SelectedColor.Color, Mode=TwoWay}" />
                        </Viewbox>
                    </ScrollViewer>
                    <uicontrols:WrapPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        HorizontalSpacing="8">
                        <Button
                            Width="120"
                            Command="{x:Bind ViewModel.SaveEditingColorCommand, Mode=OneTime}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <SymbolIcon Symbol="Save" />
                                <TextBlock Text="{x:Bind localization:Resources.Save, Mode=OneTime}" />
                            </StackPanel>
                        </Button>
                        <Button
                            Width="120"
                            Command="{x:Bind ViewModel.ResetEditingColorCommand, Mode=OneTime}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8">
                                <SymbolIcon Symbol="Undo" />
                                <TextBlock Text="{x:Bind localization:Resources.Reset, Mode=OneTime}" />
                            </StackPanel>
                        </Button>
                    </uicontrols:WrapPanel>
                </Grid>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
