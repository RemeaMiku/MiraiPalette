<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MiraiPalette.WinUI.Views.PaletteDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:MiraiPalette.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MiraiPalette.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:vm="using:MiraiPalette.WinUI.ViewModels"
    x:Name="RootPage"
    NavigationCacheMode="Disabled"
    SizeChanged="OnRootPageSizeChanged"
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <Style
            x:Key="TransparentBorderlessTextBox"
            BasedOn="{StaticResource DefaultTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <DataTemplate x:Key="MiraiColorItemDetailTamplate" x:DataType="vm:ColorViewModel">
            <ItemContainer
                x:Name="MiraiColorItemDetailItemContainer"
                Width="240"
                Height="160"
                IsSelected="{x:Bind IsSelected, Mode=OneWay}">
                <Grid>
                    <Rectangle
                        Height="96"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Fill="{x:Bind Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}" />
                    <Border
                        Padding="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBox
                                Padding="4"
                                IsEnabled="{Binding ViewModel.IsNotBusy,ElementName=RootPage,Mode=OneWay}"
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                FontSize="{StaticResource SubtitleTextBlockFontSize}"
                                FontWeight="Medium"
                                PlaceholderText="[未命名]"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                            <Button
                                x:Name="CopyColorButton"
                                Padding="4"
                                HorizontalAlignment="Stretch"
                                Command="{Binding ViewModel.CopyColorToClipboardCommand, ElementName=RootPage, Mode=OneTime}"
                                CommandParameter="{x:Bind}"
                                Style="{StaticResource BorderlessTransparentButtonStyle}">
                                <Grid x:Name="CopyButtonContentGrid">
                                    <StackPanel
                                        x:Name="CopyNormalContent"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                        <SymbolIcon Symbol="Copy" />
                                        <TextBlock Text="{x:Bind Hex, Mode=OneWay}" />
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                <ItemContainer.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Command="{Binding ViewModel.DeleteCurrentOrSelectedColorsCommand, Mode=OneTime, ElementName=RootPage}"
                            CommandParameter="{x:Bind}"
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Icon="{ui:SymbolIcon Symbol=Delete}"
                            Text="删除颜色" />
                    </MenuFlyout>
                </ItemContainer.ContextFlyout>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <SplitView
            x:Name="PaletteView"
            DisplayMode="Inline"
            IsPaneOpen="{x:Bind ViewModel.IsEditingColor, Mode=TwoWay}"
            LightDismissOverlayMode="On"
            OpenPaneLength="360"
            PaneBackground="{ThemeResource DefaultAcrylicBrush}"
            PanePlacement="Right">
            <Grid Padding="8" RowSpacing="4">
                <ScrollViewer x:Name="ColorsScrollViewer" Padding="4">
                    <StackPanel Padding="4">
                        <Border Height="120" />
                        <GridView
                            x:Name="ColorsView"
                            Padding="4"
                            HorizontalAlignment="Left"
                            AllowDrop="{x:Bind ViewModel.IsNotBusy,Mode=OneWay}"
                            CanReorderItems="{x:Bind ViewModel.IsNotBusy,Mode=OneWay}"
                            IsItemClickEnabled="True"
                            ItemTemplate="{StaticResource MiraiColorItemDetailTamplate}"
                            ItemsSource="{x:Bind ViewModel.Palette.Colors, Mode=OneTime}"
                            SelectedItem="{x:Bind ViewModel.SelectedColor, Mode=TwoWay}"
                            SelectionMode="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToListViewSelectionModeConverter}, Mode=OneWay}">
                            <interactivity:Interaction.Behaviors>
                                <interactivity:EventTriggerBehavior EventName="SelectionChanged">
                                    <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.UpdateColorSelectionCommand, Mode=OneTime}" CommandParameter="{x:Bind ColorsView.SelectedItems, Mode=OneTime}" />
                                </interactivity:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </GridView>
                    </StackPanel>
                </ScrollViewer>
                <Border
                    x:Name="PaletteHeader"
                    Margin="8"
                    Padding="16,8"
                    VerticalAlignment="Top"
                    Background="{ThemeResource DefaultAcrylicBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}">
                    <Grid ColumnSpacing="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBox
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                FontSize="{StaticResource TitleTextBlockFontSize}"
                                FontWeight="SemiBold"
                                PlaceholderText="标题…"
                                IsEnabled="{x:Bind ViewModel.IsNotBusy,Mode=OneWay}"
                                Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind ViewModel.Palette.Title, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                            <TextBox
                                behaviors:EnterToLoseFocusBehavior.IsEnabled="True"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                PlaceholderText="描述…"
                                     IsEnabled="{x:Bind ViewModel.IsNotBusy,Mode=OneWay}"
                                     Style="{StaticResource TransparentBorderlessTextBox}"
                                Text="{x:Bind ViewModel.Palette.Description, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            Padding="4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <ToggleButton
                                x:Name="MultiSelectionToggleButton"
                                Content="{ui:FontIcon Glyph=&#xE762;}"
                                IsChecked="{x:Bind ViewModel.IsMultiSelectionEnabled, Mode=TwoWay}" />
                            <Button
                                Command="{x:Bind ViewModel.DeleteCurrentOrSelectedColorsCommand, Mode=OneTime}"
                                Content="{ui:SymbolIcon Symbol=Delete}"
                                IsEnabled="{x:Bind ViewModel.HasSelectedColors, Mode=OneWay}"
                                Style="{ThemeResource CriticalButtonStyle}"
                                Visibility="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                            <Button
                                x:Name="AddColorButton"
                                Command="{x:Bind ViewModel.AddColorCommand, Mode=OneTime}"
                                Content="{ui:SymbolIcon Symbol=Add}"
                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                IsEnabled="{x:Bind ViewModel.IsMultiSelectionEnabled, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />
                            <Button Content="{ui:SymbolIcon Symbol=More}">
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                            Command="{x:Bind ViewModel.DeletePaletteCommand, Mode=OneTime}"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                            Icon="{ui:SymbolIcon Symbol=Delete}"
                                            Text="删除调色板" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <SplitView.Pane>
                <Grid Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                        x:Name="CloseColorEditPanelButton"
                        HorizontalAlignment="Right"
                        Command="{x:Bind ViewModel.ExitColorEditingCommand, Mode=OneTime}"
                        Content="{ui:SymbolIcon Symbol=Cancel}" />
                    <ScrollViewer
                        Grid.Row="1"
                        Padding="8"
                        VerticalAlignment="Center">
                        <Viewbox HorizontalAlignment="Stretch">
                            <controls:ColorPicker
                                ColorChanged="ColorPicker_ColorChanged"
                                ColorSpectrumShape="Ring"
                                IsColorPaletteVisible="False"
                                Color="{x:Bind ViewModel.SelectedColor.Color, Mode=TwoWay}" />
                        </Viewbox>
                    </ScrollViewer>
                    <controls:WrapPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        HorizontalSpacing="8">
                        <Button
                            Width="120"
                            Command="{x:Bind ViewModel.SaveEditingColorCommand, Mode=OneTime}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Accept" />
                                <TextBlock Text="接受" />
                            </StackPanel>
                        </Button>
                        <Button Width="120" Command="{x:Bind ViewModel.ResetEditingColorCommand, Mode=OneTime}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Undo" />
                                <TextBlock Text="重置" />
                            </StackPanel>
                        </Button>
                    </controls:WrapPanel>
                </Grid>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
