<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="MiraiPalette.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:MiraiPalette.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MiraiPalette.WinUI"
    xmlns:localization="using:MiraiPalette.WinUI.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MiraiPalette.WinUI.ViewModels"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:views="using:MiraiPalette.WinUI.Views"
    x:Name="Window"
    Title="{x:Bind ViewModel.Title, Mode=OneWay}"
    SizeChanged="Window_SizeChanged"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  https://github.com/microsoft/microsoft-ui-xaml/issues/10374  -->
        <TitleBar
            x:Name="TitleBar"
            Title="{x:Bind ViewModel.Title, Mode=OneWay}"
            VerticalContentAlignment="Center"
            BackRequested="TitleBar_BackRequested"
            IsBackButtonVisible="False"
            PaneToggleRequested="TitleBar_PaneToggleRequested">
            <TitleBar.LeftHeader>
                <ImageIcon
                    Height="16"
                    Margin="16,0,8,0"
                    Source="/Assets/MiraiPaletteLogo.ico" />
            </TitleBar.LeftHeader>
        </TitleBar>
        <NavigationView
            x:Name="MainNavigationView"
            Grid.Row="1"
            AllowDrop="True"
            CompactModeThresholdWidth="{x:Bind local:MainWindow.OverlayThresholdWidth, Mode=OneTime}"
            DisplayModeChanged="MainNavigationView_DisplayModeChanged"
            ExpandedModeThresholdWidth="{x:Bind local:MainWindow.OverlayThresholdWidth, Mode=OneTime}"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            MenuItemsSource="{x:Bind ViewModel.Folders, Mode=OneTime}"
            SelectedItem="{x:Bind ViewModel.SelectedMenuItem, Mode=TwoWay}"
            SelectionChanged="MainNavigationView_SelectionChanged">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="Loaded">
                    <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand, Mode=OneTime}" />
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="models:FolderViewModel">
                    <NavigationViewItem
                        Content="{x:Bind Name, Mode=OneWay}"
                        Icon="Folder" />
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
            <!--<NavigationView.AutoSuggestBox>
                <AutoSuggestBox QueryIcon="Find" />
            </NavigationView.AutoSuggestBox>-->
            <NavigationView.PaneCustomContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ListView
                        ItemsSource="{x:Bind ViewModel.SpecialFolders, Mode=OneTime}"
                        SelectedItem="{x:Bind ViewModel.SelectedSpecialFolder, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:FolderViewModel">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="16">
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE80F;" />
                                    <TextBlock Text="{x:Bind Name, Mode=OneTime}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <NavigationViewItemSeparator
                        x:Name="MenuSeparator"
                        Grid.Row="1" />
                </Grid>
            </NavigationView.PaneCustomContent>
            <NavigationView.PaneFooter>
                <Button
                    Margin="4,0"
                    Padding="12,8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Command="{x:Bind ViewModel.AddFolderCommand, Mode=OneTime}"
                    Style="{StaticResource BorderlessTransparentButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="16">
                        <FontIcon
                            FontSize="16"
                            Glyph="&#xE710;" />
                        <TextBlock Text="{x:Bind localization:Resources.AddNewFolder, Mode=OneTime}" />
                    </StackPanel>
                </Button>
            </NavigationView.PaneFooter>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <controls:PropertySizer
                    Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                    Binding="{x:Bind MainNavigationView.OpenPaneLength, Mode=TwoWay}"
                    Maximum="360"
                    Minimum="50"
                    Visibility="{x:Bind MainNavigationView.IsPaneOpen, Mode=OneWay}" />
                <Frame
                    x:Name="ContentFrame"
                    Grid.Column="1"
                    Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}" />
            </Grid>
        </NavigationView>
    </Grid>
</Window>
