<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MiraiPalette.WinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:MiraiPalette.WinUI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:MiraiPalette.WinUI.ViewModels"
        xmlns:ui="using:CommunityToolkit.WinUI"
        xmlns:uiconverters="using:CommunityToolkit.WinUI.Converters"
        xmlns:views="using:MiraiPalette.WinUI.Views"
        xmlns:controls="using:CommunityToolkit.WinUI.Controls"
        xmlns:localization="using:MiraiPalette.WinUI.Strings"
        x:Name="Window"
        SizeChanged="Window_SizeChanged"
        Title="Mirai Palette"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  https://github.com/microsoft/microsoft-ui-xaml/issues/10374 -->
        <TitleBar x:Name="TitleBar"
                  Title="{x:Bind Window.Title,Mode=OneWay}"
                  VerticalContentAlignment="Center"
                  IsBackButtonVisible="{x:Bind ContentFrame.CanGoBack,Mode=OneWay}"
                  BackRequested="TitleBar_BackRequested"
                  PaneToggleRequested="TitleBar_PaneToggleRequested">
            <TitleBar.LeftHeader>
                <ImageIcon Source="/Assets/MiraiPaletteLogo.ico"
                           Height="16"
                           Margin="16,0,8,0" />
            </TitleBar.LeftHeader>
        </TitleBar>
        <NavigationView SelectionChanged="MainNavigationView_SelectionChanged" CompactModeThresholdWidth="{x:Bind local:MainWindow.OverlayThresholdWidth,Mode=OneTime}"
                        ExpandedModeThresholdWidth="{x:Bind local:MainWindow.OverlayThresholdWidth,Mode=OneTime}" x:Name="MainNavigationView" IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False" Grid.Row="1">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="ViewAll"
                                    Content="{x:Bind localization:Resources.AllPalettes,Mode=OneTime}" IsSelected="True"/>
            </NavigationView.MenuItems>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <controls:PropertySizer Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                                        Minimum="50"
                                        Maximum="360"
                                        Binding="{x:Bind MainNavigationView.OpenPaneLength,Mode=TwoWay}"
                                        Visibility="{x:Bind MainNavigationView.IsPaneOpen,Mode=OneWay}" />
                <Frame Grid.Column="1"
                       x:Name="ContentFrame" Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"/>
            </Grid>
        </NavigationView>
    </Grid>
</Window>
